{
    "name": "mallardduck/opinionated-validator-laravel",
    "description": "An extension to Laravel's Validator class that provides some additional opinionated validation rules.",
    "authors": [
        {
            "name": "MallardDuck",
            "email": "self@danpock.me"
        }
    ],
    "require": {
        "illuminate/validation": "^8.0"
    },
    "require-dev": {
        "dealerdirect/phpcodesniffer-composer-installer": "^0.7.0",
        "escapestudios/symfony2-coding-standard": "^3.11",
        "orchestra/testbench": "^6.0",
        "phpcompatibility/php-compatibility": "^9.3",
        "phpstan/phpstan": "^0.12.43",
        "phpunit/phpunit": "^9.3",
        "squizlabs/php_codesniffer": "^3.5"
    },
    "autoload": {
        "psr-4": {
            "MallardDuck\\OpinionatedValidator\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "MallardDuck\\OpinionatedValidator\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "./vendor/bin/phpunit",
        "phpcs":  "./vendor/bin/phpcs --standard=PSR12",
        "phpcbf":  "./vendor/bin/phpcs --standard=PSR12",
        "check-style": "@phpcs -p --runtime-set ignore_errors_on_exit 1 --runtime-set ignore_warnings_on_exit 1 src tests",
        "fix-style": "@phpcbf -p --runtime-set ignore_errors_on_exit 1 --runtime-set ignore_warnings_on_exit 1 src tests",
        "semver": "php-semver-checker-git suggest --allow-detached -vvv --details --include-before=src --include-after=src",
        "infect": "./vendor/bin/infection --threads=4 --configuration=./infection.json.dist",
        "versions": "./vendor/bin/phpcs -p ./src/ ./tests/ --standard=PHPCompatibility --runtime-set testVersion 7.2"
    },
    "config": {
        "sort-packages": true
    },
    "extra": {
        "laravel": {
            "providers": [
                "MallardDuck\\OpinionatedValidator\\OpinionatedValidatorServiceProvider"
            ]
        }
    }
}
